@import url('https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700|Amatic+SC:400,700');
body
    margin 0
    background white
    font-family 'Open Sans', sans-serif
    font-weight 300
    font-size 16px
header 
    width 100%
    height 92vh
    background-size 100% 100%
    h1
        display none
    img
        width 100%
        height 100%
        position absolute
        visibility hidden
    p
        color #FAD6A5
        margin 5% 0 5% 50px
        font-size 1em
        line-height 1.8em
        letter-spacing 2px
    #irMapa
        visibility visible
        width 120px
        height auto
        position absolute
        left 150px
    #logo
        visibility visible
        position relative
        width 25%
        height auto
        margin 3% 0 0 40px
