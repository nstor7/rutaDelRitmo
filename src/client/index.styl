.juego
    background url('imagenes/rrJuegoFondo.jpg')
    background-size cover
    height 92vh
    margin 0 0 8vh 0
    .mapaContainer
        width 50%
        height 100%
        display inline-block
        position relative
        .mapa
            height 70%
            position absolute
            right 0 
            bottom 0 
        .logo
            height 30%
            position absolute
            top 0
            left 0
    .display
        width 49%
        height 100%
        display inline-block
        position relative 
        .ilustracion
            height 30%
            position absolute
            bottom 0 
            right 0 
footer
    background #121212
    width 100%
    height 8vh
    position fixed 
    bottom 0
    nav
        margin-left 40px
        ul
            margin 0
            list-style none
            li
                display inline-block
                height 30px
                vertical-align top
                margin-right 30px
                a
                    color #FAD6A5
                    text-decoration none
                    &:hover
                        color #4F0002 
                    img
                        max-height 100%
                        display inline-block
                        vertical-align top
                        margin 10px 0 0 0
                    h6
                        display inline-block
                        vertical-align top
                        margin 0
                        line-height 50px
                        font-size 1em
                        font-family 'Open Sans', sans-serif
#aporte
    height 20px
    width 55px
    margin-top 15px
    background #FAD6A5
    color #4F0002
    display inline-block
    text-decoration none
    text-align center
    &:hover
        background #4F0002
        color #FAD6A4
#social
    position fixed
    bottom 50px
    left 430px
    background black
    display none
    ul
        margin 0
        padding 10px 10px
        li
            display inline-block
            margin-left 10px
            a
                img
                    height 35px