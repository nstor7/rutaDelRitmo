body
    margin 0
    background white
    header 
        width 100%
        height 100vh
        background-size 100% 100%
        h1
            display none
        img
            width 100%
            height 100%
            position absolute
            visibility hidden
        p
            color #FAD6A5
            margin-left 50px
            font-size 1.5em
            line-height 1.5em
            letter-spacing 2px
#logo
    visibility visible
    position relative
    width 30%
    height auto
    margin 50px 0 0 40px
#juego
    background url('imagenes/fondo mapa panama.png')
    background-size 100% 100%
    width 100%
    height 720px
footer
    background #121212
    width 100%
    height 50px
    position fixed 
    bottom 0
    nav
        float right
        ul
            margin 0
            li
                display inline-block
                height 50px
                vertical-align top
                margin-right 30px
                a
                    height 50px
                    color #FAD6A5
                    img
                        max-height 100%
                        display inline-block
                        vertical-align top
                        margin 0
                    h5
                        display inline-block
                        vertical-align top
                        color #FAD6A5
                        margin 0
                        line-height 50px
                        font-size 1em