body
    margin 0
    background white
    header 
        width 100%
        height 100vh
        background-size 100% 100%
        h1
            display none
        img
            width 100%
            height 100%
            position absolute
            visibility hidden
        p
            color #FAD6A5
            margin-left 50px
            font-size 1.5em
            line-height 1.5em
            letter-spacing 2px
#logo
    visibility visible
    position relative
    width 30%
    height auto
    margin 50px 0 0 40px
#juego
    background url('imagenes/fondo mapa panama.png')
    background-size 100%
    width 100%
    height 720px
    transition 0.5s ease-in opacity
footer
    background #121212
    width 100%
    height 50px
    position fixed 
    bottom 0
    nav
        margin-left 40px
        ul
            margin 0
            list-style none
            li
                display inline-block
                height 30px
                vertical-align top
                margin-right 30px
                a
                    color #FAD6A5
                    text-decoration none
                    &:hover
                        color #4F0002 
                    img
                        max-height 100%
                        display inline-block
                        vertical-align top
                        margin 10px 0 0 0
                    h6
                        display inline-block
                        vertical-align top
                        margin 0
                        line-height 50px
                        font-size 1em
                        font-family helvetica
#aporte
    height 20px
    width 55px
    margin-top 15px
    background #FAD6A5
    color #4F0002
    display inline-block
    text-decoration none
    text-align center
    &:hover
        background #4F0002
        color #FAD6A5
#social
    position fixed
    bottom 50px
    left 500px
    background black
    display none
    ul
        margin 0
        padding 10px 10px
        li
            display inline-block
            margin-left 10px
            a
                img
                    height 50px