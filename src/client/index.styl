@import url('https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700|Amatic+SC:400,700');
body
    margin 0
    background white
    font-family 'Open Sans', sans-serif
    font-weight 300
    header 
        width 100%
        height 100vh
        background-size 100% 100%
        h1
            display none
        img
            width 100%
            height 100%
            position absolute
            visibility hidden
        p
            color #FAD6A5
            margin 5% 0 5% 50px
            font-size 1em
            line-height 1.8em
            letter-spacing 2px
#irMapa
    visibility visible
    width 120px
    height auto
    position absolute
    left 150px
#logo
    visibility visible
    position relative
    width 25%
    height auto
    margin 3% 0 0 40px
#juego
    background-image url('imagenes/fondo pergamino 2.png')
    background-size 100%
    width 100%
    height 720px
    transition 0.5s ease-in opacity
    position relative
    margin-bottom 50px
.mapas
    height 600px
    display inline-block
    position absolute
    bottom 0
    img
        max-height 100%
    .ventana
        height 100px
        width auto
        position absolute
        top 150px
        left 300px
    .punto
        background black
        border-radius 50%
        width 20px
        height 20px
        position absolute
    #ptBarrio
        top 240px
        left 300px
    #ptFlamboyan
        top 320px
        left 90px
footer
    background #121212
    width 100%
    height 50px
    position fixed 
    bottom 0
    nav
        margin-left 40px
        ul
            margin 0
            list-style none
            li
                display inline-block
                height 30px
                vertical-align top
                margin-right 30px
                a
                    color #FAD6A5
                    text-decoration none
                    &:hover
                        color #4F0002 
                    img
                        max-height 100%
                        display inline-block
                        vertical-align top
                        margin 10px 0 0 0
                    h6
                        display inline-block
                        vertical-align top
                        margin 0
                        line-height 50px
                        font-size 1em
                        font-family 'Open Sans', sans-serif
#aporte
    height 20px
    width 55px
    margin-top 15px
    background #FAD6A5
    color #4F0002
    display inline-block
    text-decoration none
    text-align center
    &:hover
        background #4F0002
        color #FAD6A5
#social
    position fixed
    bottom 50px
    left 430px
    background black
    display none
    ul
        margin 0
        padding 10px 10px
        li
            display inline-block
            margin-left 10px
            a
                img
                    height 35px